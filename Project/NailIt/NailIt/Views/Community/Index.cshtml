<!-- The Modal articleEditModal -->
<div class="modal fade" id="editArticleModal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content default-margin">
            <!-- Header -->
            <div class="modal-header d-flex align-items-center bottomBorder px-0 mx-3">
                <div class="d-flex align-items-center">
                    <div id="editModalAuthorAvatar" class="bg-secondary d-flex justify-content-center align-items-center rounded-circle" style="aspect-ratio:1;color: #fff;width:55px">
                        <div>
                            B
                        </div>
                    </div>
                    <div id="editModalAuthor">
                        <div>Author Nickname</div>
                        <div>Author Username</div>
                    </div>
                    <div>
                        <label for="newArtiCodeList">選擇看板:</label>
                        <select name="newArtiCodeList" id="newArtiCodeList"></select>
                    </div>
                </div>
                <div class="d-flex align-items-start flex-column">
                    <div class="row">
                        <button data-dismiss="modal">取消</button>
                        <button onclick="showSaveArticle()">發布</button>
                    </div>
                </div>
            </div>
